<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_ph_registrarSensor_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_radius"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_tv_title_registrarSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="Registrando Sensores"
            android:letterSpacing="0.05"
            android:paddingBottom="30dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@id/constraintLayout_ph_registrarSensor_container"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/dialog_tv_number_progress_registrarSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="40dp"
            android:paddingHorizontal="30dp"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/dialog_tv_title_registrarSensor"
            tools:layout_editor_absoluteX="0dp" />

        <ProgressBar
            android:id="@+id/dialog_progressh_registrarSensor"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:paddingHorizontal="25dp"
            android:progressBackgroundTint="@color/celeste"
            android:progressTint="@color/partSup"
            app:layout_constraintTop_toBottomOf="@+id/dialog_tv_number_progress_registrarSensor"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/dialog_tv_cargando_registrarSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:textAllCaps="false"
            android:paddingTop="3dp"
            android:text="Verificando..."
            android:textColor="@color/gris_medio"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_progressh_registrarSensor" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>