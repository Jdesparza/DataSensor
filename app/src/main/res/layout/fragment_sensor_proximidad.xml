<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SensorProximidadFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_resultados_proximidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="35dp"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos"
                        android:textSize="20sp"
                        android:paddingVertical="10dp"
                        android:textColor="@color/rosado_medio"
                        android:layout_marginHorizontal="15dp"
                        android:background="@drawable/style_borde_inferior"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/cb_proximidad_fabricante"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/rosado_bajo"
                                android:checked="false"
                                android:text="Fabricante"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <CheckBox
                                android:id="@+id/cb_proximidad_version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/rosado_bajo"
                                android:checked="false"
                                android:text="Versión"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <CheckBox
                                android:id="@+id/cb_proximidad_potencia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/rosado_bajo"
                                android:checked="false"
                                android:text="Potencia"
                                android:textColor="@color/black"
                                android:textSize="17sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <CheckBox
                                android:id="@+id/cb_proximidad_resolucion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/rosado_bajo"
                                android:checked="false"
                                android:text="Resolución"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <CheckBox
                                android:id="@+id/cb_proximidad_max"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/rosado_bajo"
                                android:checked="false"
                                android:text="Proximidad Máx"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <CheckBox
                                android:id="@+id/cb_proximidad_actual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/rosado_bajo"
                                android:text="Proximidad Actual"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_check_proximidad_calculo_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    >
                    <CheckedTextView
                        android:id="@+id/ctv_proximidad_calculo_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gris_claro"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Proximación 1"
                        android:enabled="false"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_check_proximidad_calculo_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    >
                    <CheckedTextView
                        android:id="@+id/ctv_proximidad_calculo_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gris_claro"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Proximación 2"
                        android:enabled="false"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_resultados_proximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gris_claro"
        android:paddingHorizontal="50dp"
        android:paddingVertical="9dp"
        android:text="Registrar"
        android:textAllCaps="false"
        android:textColor="@color/gris_oscuro"
        android:textSize="18sp"
        android:enabled="false"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>